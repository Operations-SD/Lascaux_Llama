@page "/week/{WeekSelection:int}"
@using IntelChat.Pages.LP_Parts
@layout CustomLayout

<head>
     <link rel="stylesheet" type="text/css" href="Week.css">
     <style>
          .help {
              display: @help;
              background-color: #ffff3f;
              width: 550px;
              height: 400px;
              border-radius: 10px;
              box-shadow: 10px 10px 15px black;
              position: absolute;
              top: 170px;
          }
     </style>
</head>

<body>
     <boxPrimeName>
          <h1 style="margin-left:33px;margin-top:10px;font-size:22px">Action Plan</h1>
     </boxPrimeName>


     <div style="margin-top:200px;margin-left:25px;margin-right:25px;">
          <Timeslot_Master NumberOfCharts="7" InitialWeekSelection="WeekSelection" />
     </div>

     <nav>
          <div href="schedule/1/1">
            <button style="background-color:#70e000" class="menu-button">Schedule</button></div>
            <button class="menu-button" @onclick="()=>display(3)">Help</button>
          <div href="menuuser">
            <button style="background-color:red;" class="menu-button">Exit</button></div>
     </nav>

     <div class="help">
          <button class="closebutton" @onclick="()=>exit(3)">X</button>
          <h4>How to view the schedule</h4>
          <p class="help-text"><strong>1.</strong> CLick on any week day to go to daily view scheule and you can edit the activites as well.</p>
          <p class="help-text"><strong>2.</strong> To see the details of each acitvity on the weekly scheudle, click on the yellow bar and it will diplay a box with all the activities for that certain time as well as information of each activity.</p>
          <p class="help-text"><strong>3.</strong> To chnage the status of each activity, click on the status button and it will change the status.</p>
     </div>
</body>

@code {
    [Parameter]
    public int WeekSelection { get; set; } = 1;

    string help = "none";

    void display(int i)
    {
        if (i == 3)
        {
            help = "block";
        }
    }

    void exit(int i)
    {
        if (i == 3)
        {
            help = "none";
        }
    }
}