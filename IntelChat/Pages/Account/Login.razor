@page "/login"
<PageTitle>Login</PageTitle>

<head>
	<link rel="stylesheet" type="text/css" href="login.css">
</head>
<div class="form">
	 <h1>Login</h1>
	 <input type="text" @bind="username" placeholder="Username" required>
	 <input type="password" @bind="psw" placeholder="Password" required>
	 <input type="submit" value="Login">
	 <label>
		  <input type="checkbox" name="remember-me"> Remember me
	 </label>
	 <a href="forgot" class="forgot-password">Forgot Password</a>
	 <hr>
	 <div class="create-account">
		  <a href="signup" class="create-account">Create an Account</a>
	 </div>
</div>

@code {
    string email = string.Empty;
    string username = string.Empty;
    string psw = string.Empty;
    string psw_confirm = string.Empty;
}