	</button> *@

    <button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/Memo?pod="+pod+"&pid="+pid))"
            style="position:absolute;left:30px;top:840px;height:60px;border:0px;width:140px;">
        Memo
    </button>

</div>

