@if (isMemoIframeVisible)
{
	<!-- Memo Container ******************* this is the Outer Box ***************** -->
	<!-- Memo Container ******************* this is the Outer Box ***************** -->
	<!-- Memo Container ******************* this is the Outer Box ***************** -->

	<div style="position: absolute; 
            top: @(memoIframePosition.Y)px; 
            left: @(memoIframePosition.X)px; 
            z-index: 1000;
			height: 510px;
