		<div style="position: fixed; 
                top: 0; 
                left: 0; 
                width: 100vw; 
                height: 100vh; 
                z-index: 9999; 
                background: transparent;"
			 @onmousemove="OnMouseMoveGlobal"
			 @onmouseup="OnMouseUpGlobal">
		</div>
}



