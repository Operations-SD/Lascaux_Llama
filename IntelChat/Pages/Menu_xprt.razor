        Work
    </button>

	<button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/Program?pod="+pod+"&pid="+pid))"
			style="top:780px;color:#FFFFFF;left:320px;height:60px;">
		Program
	</button>

    <button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/Guide?pod="+pod+"&pid="+pid))"
            style="top:860px;left:320px;height:60px;">
        Guide
    </button>

	<!-- ************************************************************************************ -->
	<!-- ***************************** PROCESSES ******************************************** -->
	<!-- ************************************************************************************ -->

	<button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/addart?pod="+pod+"&pid="+pid))"
			style="top:300px;color:#FFFFFF;left:825px;height:60px;">
		Art
	</button>

	<button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/NOVA?pod="+pod+"&pid="+pid))"
			style="top:380px;left:825px;height:60px;">
		S.V.O.
	</button>


	<!-- ************************************************************************************ -->
	<!-- ************************************* Buttons ************************************** -->
	<!-- ************************************************************************************ -->

	<button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/?pod="+pod+"&pid="+pid))"
			style="position:absolute;left:30px;top:700px;height:60px;color:RED;width:140px;">
		MEMO
	</button>

	<button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/?pod="+pod+"&pid="+pid))"
			style="position:absolute;left:30px;top:780px;height:60px;color:RED;border:0px;width:140px;">
		HELP
	</button>

	<button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/?pod="+pod+"&pid="+pid))"
			style="position:absolute;left:30px;top:860px;height:60px;color:RED;border:0px;width:140px;">
		Return
	</button>









</div>
