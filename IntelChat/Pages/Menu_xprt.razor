@page "/Expert"
@inject NnetDbContext db            // Inject the ServerDbContext service for database access
@inject NavigationManager _nav
@layout CustomLayout
@using IntelChat.Models
@using System.Data.SqlClient;
@using System.Data;

<style>
	body {
		background: url("https://agineuralnet.blob.core.windows.net/background/BG_Menu.png")no-repeat;
		background-size: 1920px 1080px;
		background-position: left 0px top 0px;
		min-height: 100vh;
		width: 100%;
		opacity: 100%;
		color: bisque;
		background-color: #000000;
	}
</style>

<div class="expert-page">

	<!-- ************************************************************************************ -->
	<!-- *************************** Lock onto a Person and a POD *************************** -->
	<!-- ************************************************************************************ -->
	<p style="color:#333333;font-size:24px">Pod: @pod</p><br>
	<p style="color:#333333;font-size:24px;top:48px;position:absolute">Pid: @pid</p>

	<!-- ************************************************************************************ -->
	<!-- ******************************** DISPLAY Banner ************************************ -->
	<!-- ************************************************************************************ -->
	<div class="titlebanner">
		<img src="https://agineuralnet.blob.core.windows.net/banners/Banner_xprt.png" />
	</div>


	<!-- ************************************************************************************ -->
	<!-- *************************** GOAL   TASK   NOVA ***************************** .dbo ** -->
	<!-- ************************************************************************************ -->
	<button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/Noun?pod="+pod+"&pid="+pid))"
			style="top:300px;left:320px;height:60px;">
		Noun
	</button>

    <button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/Verb?pod="+pod+"&pid="+pid))"
            style="top:380px;left:320px;height:60px;">
        Verb
    </button>

	<button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/NovaCrud?pod="+pod+"&pid="+pid))"
			style="top:460px;left:320px;height:60px;">
		NOVA
	</button>

    <button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/Element?pod="+pod+"&pid="+pid))"
            style="top:540px;color:#FFFFFF;left:320px;height:60px;">
        Element
    </button>

    <button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/Task?pod="+pod+"&pid="+pid))"
            style="top:620px;left:320px;height:60px;">
        Task
    </button>

    <button class="general-menu-button" @onclick="@(()=>_nav.NavigateTo("/Work?pod="+pod+"&pid="+pid))"
